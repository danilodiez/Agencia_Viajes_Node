extends ../layout/index 
block contenido
    main.container.mt-5
        h1.text-center.mb-5= pagina


        .row
            .col-md-12
                blockquote.text-center Las experiencias de nuestros clientes
                .row.testimoniales
                    each testimonial in testimoniales
                        .col-md-6.col-lg-4.mb-4
                            .card
                                .card-body
                                    h2 Testimonio
                                    blockquote.blockquote
                                        pb.mb-0
                                            | #{testimonial.mensaje}   
                                    footer.blockquote-footer
                                        | #{testimonial.nombre}


            .col-md-12

                h2.text-center Agrega un Testimonial

                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                

                .row.justify-content-center

                    .col-md-8
                        form(action="/testimoniales", method="POST")

                            .form-group

                                label(for="nombre") Nombre 
                                input(id="nombre", type="text", class="form-control", placeholder="Tu nombre", name="nombre", value=nombre)
                            .form-group

                                label(for="correo") Correo electronico 
                                input(id="correo", type="email", class="form-control", placeholder="Tu correo electronico", name="correo", value=correo)
                            .form-group

                                label(for="mensaje") Mensaje 
                                textarea#mensaje(class="form-control", name="mensaje", rows="3", placeholder="Tu mensaje") mensaje
                            input.btn.mb-5.btn-success.btn-block(type="submit", value="Agregar testimonio")