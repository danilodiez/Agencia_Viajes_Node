extends ../layout/index 
block contenido
    main.container.mt-5
        .row    
            .col-md-5
                img.img-fluid(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="foto del viaje")
            .col-md-7
                h1= viaje.titulo
                p
                    i.fas.fa-calendar-alt
                    |Salida: #{viaje.fecha_ida} - Regreso: #{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    b Precio: $#{viaje.precio} ARS
                p
                    i.fas.fa-users
                    b Lugares disponibles: #{viaje.disponibles}
                p= viaje.descripcion
